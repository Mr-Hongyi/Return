@using System.Reflection
@{
    Assembly currentAssembly = typeof(Startup).Assembly;

    string version = currentAssembly.GetName().Version?.ToString(3) ?? ThisAssembly.AssemblyFileVersion;
    string uniqueVersionId = ThisAssembly.AssemblyInformationalVersion;
}

<footer class="footer">
    <div class="content has-text-centered">
        <p>
            <span title="@uniqueVersionId"><strong>Return</strong> v@(version)</span> by <a href="">CI-Agency</a>
        </p>
    </div>
</footer>